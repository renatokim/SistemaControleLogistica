@using Site.Enums
@model Site.Entidade.Pedidos.Tamanho

<br />

<div class="span12" style="margin-left: 50px;">

    @Html.Partial("../Shared/_Mensagem")

    <div style="text-align: center;">
        <div class="alert alert-info">
            <div style="text-align: center;">
                <h4>
                    TAMANHO
                </h4>
            </div>
        </div>

    </div>




    @using (Html.BeginForm("Create", "Tamanho"))
    {

        string label = "label-info";
        string botaoCor = "btn-primary";
        string botaoLabel = "Cadastrar";

        if (Model.Id > 0)
        {
            label = "label-warning";
            botaoCor = "btn-warning";
            botaoLabel = "Editar";
        }        
        
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.Tipo)

<table>
                <tbody>
                    <tr>
                        <td>
                            <span class="label @label">Descição</span>
                        </td>
                        <td>
                            <span class="label @label">Ordem</span>
                        </td>
                        <td>
                            <span class="label @label">Status</span>
                        </td>
                        <td>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.EditorFor(model => model.Descricao)
                        </td>
                        <td>
                            @Html.EditorFor(model => model.IdTamanho)
                        </td>
                        <td>
                            @{
        var ativo = string.Empty;
        var inativo = string.Empty;

        if (Model.Status == Status.Ativo)
        {
            ativo = "selected";
        }
        else
        {
            inativo = "selected";
        }

                    <select id="Status" name="Status">
                        <option @ativo value="1">Ativo</option>
                        <option @inativo value="0">Inativo</option>
                    </select>
                            }
                        </td>

                        <td>
                            @{
                                    <button type="submit" class="btn @botaoCor incluirTamanho" style="margin-top: -10px">
                                        @botaoLabel
                                    </button>
                            }                            
                        </td>
                    </tr>
                </tbody>
            </table>
    }
    
    
    @Html.Partial("_ListarTamanhos")

</div>

