@model Site.DTO.Chamado.DTOChamado

@{
    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>
    </title>
    <link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css"
          rel="stylesheet">
</head>

<body>

    <br />
    <br />

    <div class="container">
        <p>
            <a href="@Url.Action("Index", "Chamado")" class="btn btn-default">Voltar</a>
        </p>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">
                    Novo Chamado
                </h3>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="panel-body">
                    <table width="100%">
                        <tbody>
                            <tr>
                                <td width="50%">
                                    <div class="form-group">
                                        <label>
                                            Sistema
                                        </label>
                                        <select required name="Sistema" class="form-control">
                                            <option value="">
                                                Selecione
                                            </option>
                                            <option value="SistemaFinanceiro">
                                                Sistema Financeiro
                                            </option>
                                            <option value="SistemaVendas">
                                                Sistema de Vendas
                                            </option>
                                            <option value="SistemaProducao">
                                                Sistema de Produção
                                            </option>
                                            <option value="Outros">
                                                Outros
                                            </option>
                                        </select>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <label>
                                            Tipo
                                        </label>
                                        <select name="TipoChamado" required class="form-control">
                                            <option value="">
                                                Selecione
                                            </option>
                                            <option value="Erro">
                                                Erro
                                            </option>
                                            <option value="Melhoria">
                                                Melhoria
                                            </option>
                                            <option value="Atendimento">
                                                Atendimento
                                            </option>
                                        </select>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="form-group">
                                        <label>
                                            Prioridade
                                        </label>
                                        <select required name="Prioridade" class="form-control">
                                            <option value="">
                                                Selecione
                                            </option>
                                            <option value="Alta">
                                                Alta
                                            </option>
                                            <option value="Media">
                                                Média
                                            </option>
                                            <option value="Baixa">
                                                Baixa
                                            </option>
                                        </select>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <label>
                                            Status
                                        </label>
                                        <select disabled="disabled" name="TipoChamado" required class="form-control">
                                            <option value="">
                                                Aberto
                                            </option>
                                        </select>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="form-group">
                        <label>
                            Assunto
                        </label>
                        <input required name="Assunto" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>
                            Descrição
                        </label>
                        <textarea required name="Descricao" class="form-control" rows="5"></textarea>
                    </div>
                    <button type="submit" class="btn btn-default">
                        Incluir
                    </button>
                    &nbsp;
                </div>
            }
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js">
    </script>
    <script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js">
    </script>
</body>
</html>