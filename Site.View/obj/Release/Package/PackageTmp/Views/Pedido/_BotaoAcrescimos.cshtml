@using Site.IServico.Pedidos
@using Site.Servico.Pedidos

@{
    IParteAcrescimoServico parteAcrescimoServico = new ParteAcrescimoServico();
    var tipoParteAcrescimo = parteAcrescimoServico.GetTipoAcrescimo();
}

<div class="dropdown" style="margin-top:10px;">
    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" style="width: 120px; margin-top: 5px">
        Acréscimos
        <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        @foreach (var tipo in tipoParteAcrescimo)
        {
            <li><a href="#" class="botaoAcrescimos" data-id-categoria="@tipo.Id" data-toggle="modal" data-target="#Modal_Partes">@tipo.Nome</a></li>
        }
    </ul>
</div>