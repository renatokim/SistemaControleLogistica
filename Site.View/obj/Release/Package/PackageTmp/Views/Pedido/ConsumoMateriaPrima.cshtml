@model Site.DTO.Relatorio.DTOFiltroRelatorioMP

<link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet">
<link href="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet">

<div class="container">
    
    <legend>Relatório Matéria Prima</legend>
    <hr style="margin-top: -15px">
    <div class="row">

        @using (Html.BeginForm())
        {
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>
                                Data Inicial
                            </label>
                            <input id="dataInicial" style="height: 33px" type="date" class="form-control" value="@Model.DataInicial.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>
                                Data Final
                            </label>
                            <input id="dataFinal" style="height: 33px" type="date" class="form-control" value="@Model.DataFinal.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                </div>
                <div id="tabelaPedidos">
                    <table class="table table-condensed">
                        <tbody>
                            <tr>
                                <th>
                                </th>
                                <th>
                                    Pedido/Cliente
                                </th>
                                <th>
                                    Valor
                                </th>
                                <th>
                                    Data
                                </th>
                                <th>
                                    Status
                                </th>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>
                                Ordenar Por:
                            </label>
                            <select name="Ordem" class="form-control">
                                <option value="Tecido">
                                    Tecido
                                </option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="checkbox">
                                <input name="ExibirAviamentos" type="checkbox" value="true">
                                Exibir Aviamentos
                            </label>
                            <label class="checkbox">
                                <input name="ExibirSubTotal" type="checkbox" value="true">
                                Exibir SubTotal
                            </label>
                        </div>
                        <button id="btnRelatorioConsumo" type="submit" class="btn btn-default">
                            Enviar
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="https://netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="~/Scripts/ajax/pedidos.js"></script>