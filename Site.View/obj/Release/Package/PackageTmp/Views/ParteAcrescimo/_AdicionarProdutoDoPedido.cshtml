@model Site.Entidade.Pedidos.Pedido

@{
    Layout = null;
}

<table class="table">
    <tr>
        <th>
            Quantidade
        </th>
        <th>
            Produto
        </th>
        <th>
            Masc/Fem
        </th>
        <th>
            Tecido
        </th>
        <th>
            Valor
        </th>
        <th>
            Obs
        </th>
        <th>
            SubTotal
        </th>
        <th>
            Ação
        </th>
    </tr>
    @{
        foreach (var item in Model.PedidoProduto)
        {
            var subtotal = item.Valor*item.Quantidade;
            
            <tr>
                <td class="quantidade" data-quantidade="@item.Quantidade">@item.Quantidade</td>
                <td class="peca" data-peca="@item.Produto.Peca.Id" data-modelo="@item.Produto.Modelo.Id" data-modelo-descricao="@item.Produto.Modelo.Descricao">@item.Produto.Nome</td>
                <td class="mf" data-mf="@Convert.ToInt32(item.MasculinoFeminino)">@item.MasculinoFeminino</td>
                <td 
                    class="tecido" 
                    data-tecido-id="@item.Tecido.TipoTecido.Id"
                    data-cor-id="@item.Tecido.Cor.Id"
                    data-cor-descricao="@item.Tecido.Cor.Descricao"
                    data-codigo-id="@item.Tecido.Codigo.Id"
                    data-codigo-descricao="@item.Tecido.Codigo.Descricao">
                    @item.Tecido.Nome
                </td>
                <td class="valor" data-valor="@item.Valor">@item.Valor</td>
                <td class="obs" data-obs="@item.Obs">@item.Obs</td>
                <td>@subtotal</td>
                <td>
                    <a class="verProdutoDoPedido" data-produto="@item.RowNum">Ver</a>
                    |
                    <a class="editarProdutoDoPedido" data-produto="@item.RowNum">Editar</a>
                    |
                    <a class="removerProdutoDoPedido" data-produto="@item.RowNum">Remover</a>
                </td>
            </tr>                
        }
    }
</table>
<div id="pedidoAtual" style="display: none">@Model.PedidoJson</div>

<div class="modal" id="Modal_Itens" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" hidden>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <!--<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>-->
                <h4 class="modal-title" id="myModalLabel">Itens</h4>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <input class="btn btn-default" type="button" data-dismiss="modal" value="Fechar" onclick="" />
            </div>
        </div>
    </div>
</div>